#!/usr/bin/env bash

local VM='--enable-preview --source 18 --module-path .bach/bin --add-modules ALL-MODULE-PATH'

if [[ $1 == 'boot' ]]; then
  shift 1
  jshell $VM .bach/bin/bach.jshell "$@"
  exit $?
fi

if [[ $1 == 'clean' ]]; then
  rm -rf .bach/workspace
  exit $?
fi

if [[ $1 == 'init' ]]; then
  if [[ -z $2 ]]; then
    echo "Usage: bach init VERSION"
    exit 1
  fi
  jshell -R-Dbach-version="$2" https://git.io/bach-init
  exit $?
fi

if [[ -f ".bach/src/$1.java" ]]; then
  PROGRAM=".bach/src/$1.java"
  shift 1
  java $VM "$PROGRAM" "$@"
  exit $?
fi

if [[ -f "$1" ]]; then
  java $VM "$@"
  exit $?
fi

java $VM --module com.github.sormuras.bach "$@"
exit $?
